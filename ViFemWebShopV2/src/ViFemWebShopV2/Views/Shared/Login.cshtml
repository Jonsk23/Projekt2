@model LoginVM
@{
    ViewBag.Title = "Login";
}


<div class="row" style="padding-bottom: 200px">
    <div class="box">
        <div class="col-lg-12" align="center">
            <form asp-controller="Admin" asp-action="Login">
                <hr />
                <h1 style="padding-bottom: 20px">
                    Logga in
                </h1>
                <hr />
                <table>
                    <tr>
                        <td style="padding-bottom: 5px;"><label asp-for="UserName"></label></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 20px;"><input asp-for="UserName" /></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 10px;"><span asp-validation-for="UserName"></span></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 5px;"><label asp-for="Password"></label></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 20px;"><input type="password" asp-for="Password" /></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 20px;"><span asp-validation-for="Password"></span></td>
                    </tr>
                    <tr>
                        <td colspan="3" align="center"><input type="submit" value="OK" /></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>
