@model LoginVM
@{
    ViewBag.Title = "Login";
}


<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <form asp-controller="Admin" asp-action="Login">
                <table align="center">
                    <caption>
                        <h1>Login</h1>
                    </caption>
                    <tr>
                        <td  style="padding-bottom: 20px;"><label asp-for="UserName"></label></td>
                        <td  style="padding-bottom: 20px;"><input asp-for="UserName" /></td>
                        <td  style="padding-bottom: 20px;"><span asp-validation-for="UserName"></span></td>
                    </tr>
                    <tr>
                        <td style="padding-bottom: 20px;"><label asp-for="Password"></label></td>
                        <td style="padding-bottom: 20px;"><input asp-for="Password" /></td>
                        <td style="padding-bottom: 20px;"><span asp-validation-for="Password"></span></td>
                    </tr>
                    <tr>
                        <td colspan="3" align="center"><input type="submit" value="Login" /></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>
