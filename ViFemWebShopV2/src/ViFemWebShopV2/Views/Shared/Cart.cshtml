@model List<ShopCartItemVM>

<div class="row" style="padding-bottom: 200px">
    <div class="box">
        <div class="col-lg-12" align="center">
            @if (Context.Request.Cookies["username"].Count > 0)
            {
                <table style="border-collapse:collapse;">
                    <tr>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Sum</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="border:solid 1px black; padding: 5px; width: 150px;">@item.ProductName</td>
                            <td style="border:solid 1px black; padding: 5px; width: 150px;">@item.Quantity</td>
                            <td style="border:solid 1px black; padding: 5px; width: 150px;">@item.Price</td>
                            <td style="border:solid 1px black; padding: 5px; width: 150px;">@item.Sum</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4" align="right"><a href="/shop/products">Shoppen</a></td>
                    </tr>
                </table>
            }
            else
            {
                <p>Kundvagnen är tom</p>
            }
        </div>
    </div>
</div>
