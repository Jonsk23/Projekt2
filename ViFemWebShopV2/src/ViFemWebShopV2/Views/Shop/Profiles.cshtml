@using ViFemWebShopV2.ViewModels
@model UserProfileVM

@{

    ViewBag.Title = "Din profil";
    Layout = "~/Views/Shared/_Layout";
}

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Välkommen

                    <strong>@Model.addUser.FirstName @Model.addUser.LastName</strong>
                </h2>
                <hr>
            </div>
            <div>
                <p>Här presenteras kundens information</p>
                <p>@Model.addUser.UserName</p>
                <p>@Model.addUser.Street</p>
                <p>@Model.addUser.ZipCode @Model.addUser.City</p>
                <p>@Model.addUser.Email</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Lagda ordrar</strong>
                </h2>
                <hr>
            </div>
            <div>
                <table>
                    <caption><strong>Lagda ordrar</strong></caption>
                    <tr>
                        <th>Ordernummer</th>
                        <th>Orderdatum</th>
                        <th>Status</th>
                    </tr>
                    @foreach (var item in Model.orders)
                    {
                        <tr>
                            <td>@item.Ordernumber</td>
                            <td>@item.OrderDate</td>
                            <td>@item.Status</td>
                        </tr>
                    }


                </table>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

</div>