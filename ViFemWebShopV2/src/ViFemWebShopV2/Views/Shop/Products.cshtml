@using ViFemWebShopV2.ViewModels
@model ListProductVM[]

@{

    ViewBag.Title = "Produkter";
    Layout = "~/Views/Shared/_Layout";
}

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Om
                    <strong>Våra produkter</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-6">
                <img class="img-responsive img-border-left" src="~/img/slide-2.jpg" alt="">
            </div>
            <div class="col-md-6">
                <p>Blablabla.</p> </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Produktkategori: 
                    <strong>@Model[0].Category</strong>
                </h2>
                <hr>
            </div>
                @foreach (var p in Model)
                {
                    <div class="col-sm-4 text-center">
                        <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                        <h3>
                            @p.Name
                            <small>@p.Description</small>
                            @p.Price
                        </h3>
                    </div>
                }
            <div class="col-sm-4 text-center">
                <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                <h3>
                    Ritpapper
                    <small>That one paper</small>
                </h3>
            </div>
            <div class="col-sm-4 text-center">
                <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                <h3>
                    Penna
                    <small>That one pen</small>
                </h3>
            </div>
            <div class="col-sm-4 text-center">
                <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                <h3>
                    Penställ
                    <small>That one pennställ</small>
                </h3>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

</div>
<!-- /.container -->

@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}