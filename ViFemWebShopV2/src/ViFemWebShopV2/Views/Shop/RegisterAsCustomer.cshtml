                <form asp-controller="Shop" asp-action="RegisterAsCustomer">
                    <table align="center">
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="CompanyNumber"></label></td>
                            <td style="padding-bottom:20px">
                                <input asp-for="CompanyNumber" />
