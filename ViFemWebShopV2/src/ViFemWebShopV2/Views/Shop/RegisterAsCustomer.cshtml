                        </tr>
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="FirstName"></label></td>
                            <td style="padding-bottom:20px">
                                <input asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="LastName"></label></td>
                            <td style="padding-bottom:20px">
                                <input asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="Password"></label></td>
                            <td style="padding-bottom:20px">
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="Street"></label></td>
                            <td style="padding-bottom:20px">
                                <input asp-for="Street" />
                                <span asp-validation-for="Street"></span>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-bottom:20px"><label asp-for="City"></label></td>
                            <td style="padding-bottom:20px">
