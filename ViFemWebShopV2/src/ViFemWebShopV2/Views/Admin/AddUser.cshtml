@using ViFemWebShopV2.ViewModels
@model AddUserVM
@addTagHelper "*,Microsoft.AspNet.Mvc.TagHelpers"

@{
    ViewBag.Title = "Add customer";
    Layout = "~/Views/Shared/_LayoutAdmin";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Enter your
                <strong>information</strong>
            </h2>
            @*<div asp-validation-summary="ValidationSummary.All"></div>*@
            <div class="text-center">
                <table align="center">
                    <form asp-controller="Admin" asp-action="AddUser">
                        <tr>
                            <td><label asp-for="Email"></label></td>
                            <td>
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="FirstName"></label></td>
                            <td>
                                <input asp-for="FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="LastName"></label></td>
                            <td>
                                <input asp-for="LastName" />
                                <span asp-validation-for="LastName"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="Password"></label></td>
                            <td>
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="Street"></label></td>
                            <td>
                                <input asp-for="Street" />
                                <span asp-validation-for="Street"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="City"></label></td>
                            <td>
                                <input asp-for="City" />
                                <span asp-validation-for="City"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="ZipCode"></label></td>
                            <td>
                                <input asp-for="ZipCode" />
                                <span asp-validation-for="ZipCode"></span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="submit" value="Add as user" /></td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </div>
</div>

<h1>Enter your information</h1>


@section script{
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
}
